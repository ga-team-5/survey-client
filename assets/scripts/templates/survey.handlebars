
{{#each surveys as |survey|}}


<div class="col-5 mx-auto">
  <h4>{{survey.title}}</h4>
  <div>
    <p>{{survey.choices.option1}}</p>
    <input type="radio" name="vote" value="1">
  </div>
  <div>
    <p>{{survey.choices.option2}}</p>
    <input type="radio" name="vote" value="2">
  </div>
  <div>
    <p>{{survey.choices.option3}}</p>
    <input type="radio" name="vote" value="3">
  </div>
  <div>
    <p>{{survey.choices.option4}}</p>
    <input type="radio" name="vote" value="4">
  </div>
  <button type="submit" class="btn btn-info vote-submit" data-survey-id={{survey._id}}>Submit</button>
</div>


<div class="modal-footer">
<button type="submit" class="btn btn-primary">Save changes</button>
</div>

<button type="button" class="btn btn-info edit-survey-button" data-toggle="modal" data-target="#modal-{{survey._id}}" data-owner="{{survey.owner}}">
Edit
</button>

<button class="delete-survey-button btn btn-info submit remove" type="button" data-owner="{{survey.owner}}">Delete</button></p>


{{/each}}




